<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/tarjeta">

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_logoapp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbNombreCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titulos_tarjeta"
            android:text="Nombre Completo" />

        <TextView
            android:id="@+id/lbTipoPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/contenido_tarjeta"
            android:text="Tipo de Peso" />

        <TextView
            android:id="@+id/lbMayorMenorEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/contenido_tarjeta"
            android:text="Persona MayorMenor de Edad" />

        <ImageView
            android:id="@+id/imgSexo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_logoapp" />

        <TextView
            android:id="@+id/lbProcedencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad de procedencia"
            style="@style/contenido_tarjeta"
            android:textAlignment="viewEnd" />
    </LinearLayout>
</LinearLayout>